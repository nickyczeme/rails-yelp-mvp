<div class='container'>
  <h1>All my restaurants</h1>

  <ul class="list-group">
    <% @restaurants.each do |restaurant| %>
      <li class="list-group-item"><%= link_to restaurant.name, restaurant %></li>
    <% end %>
  </ul>

  <%= link_to 'Create restaurant', new_restaurant_path, class: "btn btn-primary"%>

</div>
